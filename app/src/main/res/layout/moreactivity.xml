    <!--标题布局-->
    <include layout="@layout/title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d6d6d6" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#EDEDED"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="#FFFFFF" >

             <ImageView
                android:id="@+id/tx"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                 android:layout_centerVertical="true"
                android:src="@drawable/layerlist_circle_mask"
                 android:background="@mipmap/tx"/>

            <com.example.hbkjgoa.display.CircularImage
                android:id="@+id/cover_user_photo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
               />

            <com.example.hbkjgoa.util.Image.HeaderImageView
                android:id="@+id/hi"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_weight="0.1" >
        </TextView>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#DDDDDD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text1"
                android:layout_alignBottom="@+id/text1"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:text="姓名"
                android:textColor="@color/black"
                android:textSize="@dimen/moreacttext" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="周惠"
                android:textColor="#A9A9A9"
                android:textSize="@dimen/moreacttext2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text2"
                android:layout_alignBottom="@+id/text2"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:text="部门"
                android:textColor="@color/black"
                android:textSize="@dimen/moreacttext" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#DDDDDD" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="技术支持部"
                android:textColor="#A9A9A9"
                android:textSize="@dimen/moreacttext2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text3"
                android:layout_alignBottom="@+id/text3"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:text="职务"
                android:textColor="@color/black"
                android:textSize="@dimen/moreacttext" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#DDDDDD" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="项目负责人"
                android:textColor="#A9A9A9"
                android:textSize="@dimen/moreacttext2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="gone"
            android:background="#FFFFFF" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text4"
                android:layout_alignBottom="@+id/text4"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:text="电话"
                android:textColor="@color/black"
                android:textSize="@dimen/moreacttext" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#DDDDDD" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="123"
                android:textColor="#A9A9A9"
                android:textSize="@dimen/moreacttext2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="gone"
            android:background="#FFFFFF" >

            <TextView
                android:id="@+id/tt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text5"
                android:layout_alignBottom="@+id/text5"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:text="地址"
                android:textColor="@color/black"
                android:textSize="@dimen/moreacttext" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#DDDDDD" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/tt5"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="@string/moreact_t5"
                android:textColor="#A9A9A9"
                android:ellipsize="marquee"
                android:gravity="right"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textSize="@dimen/moreacttext2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/R1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/single_layout_selector" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text6"
                android:layout_alignBottom="@+id/text6"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:text="设置"
                android:textColor="@color/black"
                android:textSize="@dimen/moreacttext" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#DDDDDD" />

            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@mipmap/mm_submenu_normal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#FFFFFF"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/zhengnum"
                android:layout_alignBottom="@+id/zhengnum"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#DDDDDD" />

            <TextView
                android:id="@+id/zhengnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text=""
                android:textColor="#A9A9A9"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5.5" >
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>