             <EditText
	        android:id="@+id/password"
	      	android:layout_width="fill_parent"
	        android:layout_marginLeft="58dip"
	        android:layout_marginRight="58dip"
	        android:layout_height="40dip"
	        android:ems="10"
	        android:inputType="textPassword"
	        android:hint="密码"
	        android:paddingLeft="12dp"
	        android:background="@drawable/myshape_fillet2"
	        android:textSize="15sp" />
        -->

        <LinearLayout
            android:id="@+id/check_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/login_check"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:button="@null"
                android:textColor="@color/black"
                android:visibility="gone"
                />


        </LinearLayout>

        <Button
            android:id="@+id/login_login_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="58dip"
            android:layout_marginRight="58dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/myshape_fillet3"
            android:onClick="login_mainweixin"
            android:padding="8dp"
            android:text="登录"
            android:textColor="#1F5F6F"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
