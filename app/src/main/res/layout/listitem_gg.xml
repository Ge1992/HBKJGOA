<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageItem"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/titleItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/zt"
            android:padding="4dp"
            android:text="111111111111111111111111111111111111的点1111111111111"
            android:textColor="#4a4a4a"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/zt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/imageItem"
            android:padding="4dp"
            android:text="[已阅]"
            android:textColor="@color/red"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/infoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="7dp"
            android:textColor="@color/red"
            android:layout_marginRight="10dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ztItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:text=""
            android:textColor="#666"

            android:textSize="14sp" />

        <TextView
            android:id="@+id/bkItem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleItem"
            android:layout_alignLeft="@+id/titleItem"
            android:layout_marginTop="5dp"
            android:text="已办理"
            android:textColor="#666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bkItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bkItem1"
            android:layout_alignLeft="@+id/titleItem"
            android:layout_marginTop="5dp"
            android:text="已办理"
            android:textColor="#666"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/sj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bkItem"
            android:layout_alignLeft="@+id/titleItem"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:text=""
            android:textColor="#666"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>